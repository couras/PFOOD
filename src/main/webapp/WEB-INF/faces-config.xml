<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

 
   <lifecycle>
        <phase-listener>br.com.pfood.filter.Autenticacao</phase-listener>
    </lifecycle>
	
    <resource-bundle>
        <base-name>label</base-name>
        <var>lbl</var>
    </resource-bundle>
    <locale-config>
        <default-locale>pt_BR</default-locale>
        <supported-locale>en_US</supported-locale>
    </locale-config>
    <message-bundle>
        MessagesFaces
    </message-bundle>
    <application>
        <el-resolver>br.com.pfood.bundle.util.JsfCrudELResolver</el-resolver>
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>grupoProduto</managed-bean-name>
        <managed-bean-class>br.com.pfood.bundle.GrupoProdutoController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>grupoProdutoJpa</managed-bean-name>
        <managed-bean-class>br.com.pfood.bundle.GrupoProdutoFacade</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>br.com.pfood.model.GrupoProduto</converter-for-class>
        <converter-class>br.com.pfood.bundle.GrupoProdutoConverter</converter-class>
    </converter>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>grupoProduto_create</from-outcome>
            <to-view-id>/grupoProduto/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>grupoProduto_list</from-outcome>
            <to-view-id>/grupoProduto/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>grupoProduto_edit</from-outcome>
            <to-view-id>/grupoProduto/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>grupoProduto_detail</from-outcome>
            <to-view-id>/grupoProduto/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
